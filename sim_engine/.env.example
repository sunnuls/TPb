# Multi-Agent Simulation Research Framework - Environment Variables
# Educational Use Only: Configuration for controlled research simulations
# Подпункт 1.2: Robustness - env vars для configs, secure protocols

# ============================================================================
# SIMULATION CONFIGURATION
# ============================================================================
SIM_MODE=research
LOG_LEVEL=INFO
SIMULATION_DURATION=3600

# ============================================================================
# AGENT CONFIGURATION (Подпункт 1.1: scaling to 100 agents)
# ============================================================================
AGENT_COUNT=10
REPLICA_COUNT=2
BEHAVIOR_TYPE=balanced

# Behavior distribution for research diversity
CONSERVATIVE_RATIO=0.3
BALANCED_RATIO=0.4
AGGRESSIVE_RATIO=0.3

# ============================================================================
# CENTRAL HUB CONFIGURATION
# ============================================================================
CENTRAL_HUB_HOST=central-hub
CENTRAL_HUB_PORT=8765
MAX_AGENTS=100

# Security (Подпункт 1.2: secure protocols)
ENCRYPTION_ENABLED=true
ENCRYPTION_KEY=<generate-with-cryptography.fernet.Fernet.generate_key()>
JWT_SECRET=<generate-secure-random-string>
SESSION_TIMEOUT=7200

# ============================================================================
# MULTI-REGION CONFIGURATION (Пункт 1: multi-region для network diversity)
# ============================================================================
REGION=us-east-1
# Available regions: us-east-1, us-west-2, eu-west-1, ap-southeast-1
ENABLE_MULTI_REGION=true

# Network diversity simulation
PROXY_ENABLED=false
PROXY_ROTATION_INTERVAL=300

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=research_sim_2026
REDIS_DB=0

# ============================================================================
# MONITORING CONFIGURATION (Preparation for Шаг 4.2)
# ============================================================================
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_USER=admin
GRAFANA_PASSWORD=research_sim

# Metrics collection intervals
METRICS_INTERVAL=30
HEALTH_CHECK_INTERVAL=60

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_DIR=/app/logs
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# ============================================================================
# RESEARCH OUTPUT CONFIGURATION
# ============================================================================
RESULTS_DIR=/app/results
CHECKPOINT_DIR=/app/checkpoints
SAVE_INTERVAL=300

# Data collection
COLLECT_HAND_HISTORIES=true
COLLECT_DECISION_DATA=true
COLLECT_OPPONENT_PROFILES=true

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
WORKER_THREADS=4
MAX_CONCURRENT_DECISIONS=50
MONTE_CARLO_SIMULATIONS=1000

# Resource limits per agent
AGENT_MEMORY_LIMIT=512M
AGENT_CPU_LIMIT=1.0

# ============================================================================
# ANOMALY DETECTION
# ============================================================================
ENABLE_ANOMALY_DETECTION=true
ANOMALY_THRESHOLD=0.8
ACTIVITY_RATE_LIMIT=100

# ============================================================================
# EDUCATIONAL COMPLIANCE
# ============================================================================
EDUCATIONAL_MODE=true
REQUIRE_RESEARCH_CONSENT=true
DATA_ANONYMIZATION=true
